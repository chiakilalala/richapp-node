<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="gradient leading-relaxed tracking-wide flex flex-col">
    <!--Nav-->
    <nav id="header" class="w-full z-30 top-0 text-white py-1 lg:py-6">
        <div class="w-full container mx-auto flex flex-wrap items-center justify-between mt-0 px-2 py-2 lg:py-6">
            <div class="pl-4 flex items-center">
                <a class="text-white no-underline hover:no-underline font-bold text-2xl lg:text-4xl" href="#">
                    <svg class="h-6 w-6 inline-block fill-current text-orange-700" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
            <path d="M13 8V0L8.11 5.87 3 12h4v8L17 8h-4z" />
          </svg>
                    <%= title %>
                </a>
            </div>

            <div class="block lg:hidden pr-4">
                <button id="nav-toggle" class="flex items-center px-3 py-2 border rounded text-gray-500 border-gray-600 hover:text-gray-800 hover:border-teal-500 appearance-none focus:outline-none">
            <svg
              class="fill-current h-3 w-3"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
            >
              <title>Menu</title>
              <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z" />
            </svg>
          </button>
            </div>

            <div class="w-full justify-end flex-grow lg:flex lg:items-center lg:w-auto hidden lg:block mt-2 lg:mt-0 text-black p-4 lg:p-0 z-20" id="nav-content">

                <a href="/accounts/create"><button id="navAction" type="submit" class="gradient2 mx-auto lg:mx-0 hover:underline text-gray-800 font-extrabold rounded mt-4 lg:mt-0 py-4 px-8 shadow opacity-75">
                新增消費
                </button></a>
            </div>
        </div>
    </nav>

    <div class="container mx-auto h-screen">


        <div class="flex items-center w-full mx-auto content-end">


            <div class="browser-mockup flex flex-1 m-6 md:px-0 md:m-12 bg-white w-1/2 rounded shadow-xl">
                <div class="container mx-auto px-4 max-w-sm mt-8">

                    <form action="/accounts/<%= account.id%>/update" method="POST">

                        <legend class="flex block text-gray-700 mb-2 justify-center">
                            薪資消費
                        </legend>
                        <div class="container mx-auto px-4 max-w-sm">

                            <div class="mb-8">
                                <label class="block text-gray-700 text-sm font-bold mb-2">
                          請輸入消費標題
                          <input type="text" value="<%= account.title %>" placeholder="請輸入消費標題" name="title" class="bg-white focus:outline-none focus:shadow-outline border border-gray-300 rounded-lg py-2 px-4 mt-2 block w-full appearance-none leading-normal">
                        </label>

                            </div>

                            <div class="mb-8">
                                <label class="block text-gray-700 text-sm font-bold mb-2">
                            選擇種類
                            <div class="relative">
                              <select name="type" class="bg-white focus:outline-none focus:shadow-outline border border-gray-300 rounded-lg py-2 px-4 mt-2 block w-full appearance-none leading-normal" id="grid-state">
                                <option value="">Please select</option>
                                <option <%= account.type === 'food'? 'selected' :'' %> value="food"> 食 </option>
                                <option  <%= account.type === 'cloth'? 'selected' :'' %> value="cloth"> 衣 </option>
                                <option <%= account.type === 'home'? 'selected' :'' %> value="home">住</option>
                                <option <%= account.type === 'travel'? 'selected' :'' %> value="travel">行</option>
                                <option <%= account.type === 'fun'? 'selected' :'' %> value="fun"> 育樂 </option>
                        
                              </select>
                              <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                                <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
                              </div>
                            </div>
                           </label>
                            </div>

                            <div class="mb-8">
                                <label class="block text-gray-700 text-sm font-bold mb-2">
                        請輸入消費金額
                        <input type="text" value="<%= account.cost %>" placeholder="請輸入消費金額" name="cost" class="bg-white focus:outline-none focus:shadow-outline border border-gray-300 rounded-lg py-2 px-4 mt-2 block w-full appearance-none leading-normal">
                       </label>

                            </div>
                            <div class="mb-8 flex items-center justify-center">
                                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="button">
                             送出
                            </button>
                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>













    <script>
        /*Toggle dropdown list*/
        /*https://gist.github.com/slavapas/593e8e50cf4cc16ac972afcbad4f70c8*/

        var navMenuDiv = document.getElementById("nav-content");
        var navMenu = document.getElementById("nav-toggle");

        document.onclick = check;

        function check(e) {
            var target = (e && e.target) || (event && event.srcElement);

            //Nav Menu
            if (!checkParent(target, navMenuDiv)) {
                // click NOT on the menu
                if (checkParent(target, navMenu)) {
                    // click on the link
                    if (navMenuDiv.classList.contains("hidden")) {
                        navMenuDiv.classList.remove("hidden");
                    } else {
                        navMenuDiv.classList.add("hidden");
                    }
                } else {
                    // click both outside link and outside menu, hide menu
                    navMenuDiv.classList.add("hidden");
                }
            }
        }

        function checkParent(t, elm) {
            while (t.parentNode) {
                if (t == elm) {
                    return true;
                }
                t = t.parentNode;
            }
            return false;
        }
    </script>
</body>

</html>